header(layout="horizontal")
div(style='padding-bottom: 15px;')
    md-toolbar.md-accent
        .md-toolbar-tools
          span.md-flex FaceAndela
          md-button.md-fab(aria-label='Comment' ng-click="toggleMenu()")
           md-icon(icon='/images/menu.png' style='width: 24px; height: 24px;')
          md-button.md-fab(aria-label='Comment' ng-click="toggleSearch()")
           md-icon(icon='/images/search.png' style='width: 24px; height: 24px;')
          md-button.md-fab(aria-label='Comment' ng-click="login()" ng-if="!currentUser")
           md-icon(icon='/images/login.png' style='width: 24px; height: 24px;')
          .dropdown(ng-if="currentUser")
            a.dropdown-toggle(data-toggle='dropdown', href='#')
              img(ng-src="{{currentUser.pictureUrl}}" style='width: 45px; height: 45px; border-radius: 100%' )
            ul.dropdown-menu.dropdown(role='menu')
              li
                a(href='#') Edit profile
              li
                a(href='#' ng-click='logout()') Logout
           
    md-toolbar.md-warn(ng-if="menu")
      div(class="top-nav")
        ul
          li 
            a(ui-sref="Home") Home
          li 
            a(ui-sref="Article") Articles
          li 
            a(ui-sref="Search") Forum
          li 
            a(ui-sref="Contact") News
    md-toolbar.md-warn(ng-if="search" id="search")
      form(class="navbar-form navbar-center" role="search" style="margin-top:18px;")
        div(class="form-group")
          input(type="text" class="form-control" col-span="12" placeholder="Search" style="width:500px")
          md-button.md-accent.md-primary(type="submit" class="btn btn-default") Search

